generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model QuestionEntity {
  id             Int    @id @default(autoincrement())
  type           String
  prompt         String
  categoryColumn Int
  row            Int    @default(0)
  points         Int
  config         String @db.LongText

  @@unique([categoryColumn, row])
}

model CategoryEntity {
  id     Int    @id @default(autoincrement())
  name   String
  column Int    @unique
}
