model QuestionEntity {
  id             Int    @id @default(autoincrement())
  type           String
  prompt         String
  categoryColumn Int
  points         Int
  config         Json

  @@unique([categoryColumn, points])
}

model CategoryEntity {
  id     Int    @id @default(autoincrement())
  name   String
  column Int

  @@unique([column])
}
